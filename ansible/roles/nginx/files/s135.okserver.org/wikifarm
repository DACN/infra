server {
    server_name wiki.okfn.org wiki.okfn.de wiki.opendataday.org wiki.dm2e.eu wiki.okfestival.org;
    index /wiki/index.php;
    autoindex off;
    root /var/www/wikifarm/;

    access_log /var/log/nginx/wikifarm.access.log;
    error_log /var/log/nginx/wikifarm.error.log;

    location / {
        try_files $uri $uri/ /wiki/index.php;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass 127.0.0.1:9000;
    }
    if ($http_user_agent ~* (bot|spider) ) {
        return 403;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif)$ {
             try_files $uri $uri/ /wiki/index.php;
             expires max;
     }

     location = /_.gif {
             expires max;
             empty_gif;
     }

     location ^~ /cache/ {
             deny all;
     }
}
