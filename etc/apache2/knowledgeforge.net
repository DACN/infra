<VirtualHost *:80>
    ServerName knowledgeforge.net
    ServerAlias admin.knowledgeforge.net projects.knowledgeforge.net project.knowledgeforge.net www.knowledgeforge.net kforge.net www.kforge.net new.knowledgeforge.net
	  Alias /robots.txt /home/kforge/etc/robots.txt
	  #PythonInterpreter main_interpreter
	  #PythonPath "['/mnt/backup/home/kforge/virtualtrac/bin'] + sys.path

    SetEnvIf User-Agent Googlebot block_me
    SetEnvIf User-Agent Slurp block_me
    SetEnvIf User-Agent msnbot block_me
    SetEnvIf User-Agent Sogou block_me
    SetEnvIf User-Agent Baiduspider block_me
    <Location />
        Order Deny,Allow
        Deny from env=block_me
    </Location>
    <Location /sesame/club/hmg/> 
        Deny from all 
    </Location>

    # rgrp: 2010-09-12
    # semi-hack based on http://groups.google.com/group/agilo/browse_thread/thread/1e1edca2a4535752?pli=1
    # to speed up trac loading
    # did not seem to have much affect!
    # Alias /ckan/trac/chrome/agilo /home/kforge/knowledgeforge.net-0.17/lib/python2.5/site-packages/agilo-0.9.0.3-py2.5.egg/agilo/scrum/backlog/htdocs
    # Alias /ckan/trac/chrome /home/kforge/knowledgeforge.net-0.17/lib/python2.5/site-packages/Trac-0.11.5-py2.5.egg/trac/htdocs
    # <Location "/ckan/trac/chrome"> 
    #    SetHandler None 
    # </Location> 

	  Include /home/kforge/etc/knowledgeforge.net_autogenerated.conf
           
    # Logging
    ErrorLog /var/log/apache2/knowledgeforge.net.error.log
    CustomLog /var/log/apache2/knowledgeforge.net.log combined
</VirtualHost>
        
<VirtualHost *:443>
    ServerName knowledgeforge.net
    ServerAlias *.knowledgeforge.net
	  Alias /robots.txt /home/kforge/etc/robots.txt
	  #PythonInterpreter main_interpreter

	  Include /home/kforge/etc/knowledgeforge.net_autogenerated.conf
            
    SetEnvIf User-Agent Googlebot block_me
    SetEnvIf User-Agent Slurp block_me
    SetEnvIf User-Agent msnbot block_me
    SetEnvIf User-Agent Sogou block_me
    SetEnvIf User-Agent Baiduspider block_me
    <Location />
        Order Deny,Allow
        Deny from env=block_me
    </Location>
    <Location /sesame/club/hmg/> 
        Deny from all 
    </Location>

    # Logging
    ErrorLog /var/log/apache2/knowledgeforge.net.error.log
    CustomLog /var/log/apache2/knowledgeforge.net.log combined
            
    # SSL
    <IfModule mod_ssl.c>
        SSLEngine on
        SSLCertificateFile /etc/apache2/ssl/knowledgeforge.crt
        SSLCertificateKeyFile /etc/apache2/ssl/okfn.2010.key
    </IfModule>
</VirtualHost>
