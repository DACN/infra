<VirtualHost *:80>
    ServerName test.ckan.net

    WSGIScriptAlias / /home/okfn/var/srvc/test.ckan.net/pyenv/bin/pylonsapp_modwsgi.py

    ErrorLog /var/log/apache2/test.ckan.net.error.log
    CustomLog /var/log/apache2/test.ckan.net.custom.log combined
</VirtualHost>

<VirtualHost *:80>
    ServerName ckan.net
    ServerAlias www.ckan.net

    Alias /dump/ /home/okfn/var/srvc/ckan.net/dumps/

    # Disable the mod_python handler for static files
    <Location /dump>
        SetHandler None
        Options +Indexes
    </Location>

    SetHandler python-program
    PythonPath "['/home/okfn/var/srvc/ckan.net/pyenv/bin'] + sys.path"
    PythonHandler pylonsapp
    PythonOption paste.ini /home/okfn/var/srvc/ckan.net/www.ckan.net.ini

    ErrorLog /var/log/apache2/ckan.net.error.log
    CustomLog /var/log/apache2/ckan.net.custom.log combined
</VirtualHost>
