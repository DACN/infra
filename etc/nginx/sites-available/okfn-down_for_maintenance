server {
	listen   localhost:8081 default;
	server_name  localhost notice.okfn.org notice.ckan.org;
	access_log   /var/log/nginx/down_for_maintenance.access.log;

	location / {
		root   /var/www/down_for_maintenance;
		index  index.html index.htm;

		# I know this is ugly. Feel free to do it more elegantly :-) /nils
		set $rewr True;
		if ( $host ~ "^notice\.(okfn|ckan)\.org$" ) {
			set $rewr False;
		}
		if ( $uri = "/index.html" ) {
			set $rewr False;
		}
		if ( $rewr = True ) {
			rewrite ^/.*$ /index.html break;
		} 
	}
}
