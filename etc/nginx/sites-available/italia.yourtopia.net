server {
	server_name  italia.yourtopia.net www.italia.yourtopia.net;

	access_log  /var/log/nginx/italia.yourtopia.net.access.log;

	server_name_in_redirect  off;

	gzip             on;
	gzip_min_length  5000;
	gzip_proxied     any;
	gzip_types       text/plain text/html text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;

	if ($host = www.italia.yourtopia.net) {
		rewrite ^ http://italia.yourtopia.net/$request_uri? permanent;
	}

	location / {
		proxy_pass http://localhost:2080;
		proxy_redirect off;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}

}

