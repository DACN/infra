#!/usr/bin/env python
import os.path
import shutil
import backupcmds

BACKUP_BASE = '/home/rgrp/backup'

if __name__ == '__main__':
    if os.path.exists(BACKUP_BASE):
        shutil.rmtree(BACKUP_BASE)
    os.makedirs(BACKUP_BASE)

    backupcmds.backup_etc_repo(BACKUP_BASE)
    backupcmds.backup_ckan(BACKUP_BASE)
